---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Welcome to Resuilder.">
  <div class="h-5/6 flex justify-center items-center px-28">
    <div class="flex-row space-y-8">
      <h1 class="font-extrabold text-8xl">
        Built for Developers, By Developers
      </h1>
      <h2 class="text-2xl">
        Our platform is designed to help developers create standout resumes
        effortlessly.
      </h2>
      <div>
        <a
          class="text-lg bg-blue-600 hover:bg-blue-500 py-2 px-4 rounded-lg"
          href={import.meta.env.EDITOR_URL}>Get started</a
        >
      </div>
    </div>
  </div>
</Layout>
